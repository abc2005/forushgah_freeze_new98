<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnmn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bordertop"
        android:orientation="horizontal"
        android:weightSum="5">


        <LinearLayout
            android:id="@+id/sabadkharid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sabads"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:tint="@color/not_selected"
                app:srcCompat="@drawable/ic_shopping_basket_black_24dp" />

            <TextView
                android:id="@+id/tv_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="سبد خرید"
                android:textColor="@color/not_selected"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileln"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:tint="@color/not_selected"
                app:srcCompat="@drawable/ic_view_category_black_24dp" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="دسته بندی"
                android:textColor="@color/not_selected"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnsupport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:tint="@color/not_selected"
                app:srcCompat="@drawable/ic_search_black_24dp" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="جستجو"
                android:textColor="@color/not_selected"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jari"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_jari"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:tint="@color/not_selected"
                app:srcCompat="@drawable/ic_format_listkharid" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="لیست خرید"
                android:textColor="@color/not_selected"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="خانه"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>