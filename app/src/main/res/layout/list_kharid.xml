<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E8"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_acts" />

    <TextView
        android:id="@+id/tv_listkharid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text=""
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/et_listkharid"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/roundedittext"
            android:gravity="right|center_vertical"
            android:hint="اضافه کردن ایتم"
            android:paddingRight="5dp"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_listkharid_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fab_plus_icon" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lv_listkharid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:divider="#E0E0E8"
            android:dividerHeight="0dp"></ListView>

        <TextView
            android:id="@+id/tv_search_listkharid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green"
            android:gravity="center"
            android:singleLine="true"
            android:layout_gravity="bottom"
            android:text="جستجو لیست خرید"
            android:textColor="#fff"
            android:textSize="17sp" />
    </FrameLayout>
</LinearLayout>