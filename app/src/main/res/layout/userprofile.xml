<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE3E6"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_acts" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/editprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:src="@drawable/editpencil" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"></View>

            <TextView
                android:id="@+id/tvname"
                style="@style/textview_title_single_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:padding="5dp"
                android:text="name" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:divider="#DFE3E6"
        android:dividerHeight="3dp"></ListView>

    <Button
        android:id="@+id/support"
        android:onClick="support"
        style="@style/textview_title"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="#3C557D"
        android:text="پشتیبان آنلاین"
        android:textColor="#fff" />

</LinearLayout>